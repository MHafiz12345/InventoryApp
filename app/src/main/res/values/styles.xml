<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Button Styles -->
    <style name="Widget.WareWise.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <style name="Widget.WareWise.QuickAction" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">2dp</item>
        <item name="contentPadding">16dp</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <!-- Animation Styles -->
    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/dialog_fade</item>
        <item name="android:windowExitAnimation">@anim/dialog_fade_out</item>
    </style>

    <!-- Card Styles -->
    <style name="Widget.WareWise.Card" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">2dp</item>
        <item name="contentPadding">16dp</item>
    </style>

    <style name="Widget.WareWise.Card.Elevated">
        <item name="cardElevation">4dp</item>
    </style>

    <style name="Widget.WareWise.Card.Flat">
        <item name="cardElevation">0dp</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/divider</item>
    </style>

    <style name="Widget.WareWise.Card.Dialog">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">8dp</item>
        <item name="contentPadding">24dp</item>
    </style>

    <!-- Dashboard Quick Action Styles -->
    <style name="Widget.WareWise.Card.QuickAction">
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">2dp</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <style name="Widget.WareWise.QuickAction.Content">
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">16dp</item>
    </style>

    <!-- Text Styles -->
    <style name="TextAppearance.WareWise.ToolbarExpanded" parent="TextAppearance.Design.CollapsingToolbar.Expanded">
        <item name="android:textSize">32sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.WareWise.ToolbarCollapsed" parent="TextAppearance.Design.CollapsingToolbar.Expanded">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Quick Action styles -->
    <style name="QuickActionCard" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">2dp</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <style name="QuickActionContent">
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">16dp</item>
    </style>

    <!-- Title styles for Profile -->
    <style name="ExpandedTitle" parent="TextAppearance.WareWise.ToolbarExpanded">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="CollapsedTitle" parent="TextAppearance.WareWise.ToolbarCollapsed">
        <item name="android:textColor">@color/white</item>
    </style>
</resources>